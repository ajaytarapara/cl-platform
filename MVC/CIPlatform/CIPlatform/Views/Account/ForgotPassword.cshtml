@model  CI_Platform.Entities.ViewModel.forgotpassModel

<div class="container-fluid">
        <div class="row">
            @Html.Partial("_AccountCarousel")
            <div id="logincontent" class="col-md-4 col-sm-12 logincontent">
                <form asp-action="ForgotPassword" asp-controller="Account">
                    <p id="forgotheading">Forgot Password</p>
                    <p id="forgotinfo">Enter your email address you've using for your account below and we will send you a password reset link</p>
                    <label asp-for="EmailId">Email Address</label>
                    <input asp-for="EmailId" type="email" id="forgotemail" placeholder="Enter your email address...">
                    <span asp-validation-for="EmailId" class="text-danger"></span>

                    <input type="submit" value="Reset my Password">                
                    <a asp-action="Login">Login</a>
                </form>
                <div id="loginpolicy">
                    <p>Privacy Policy</p>
                </div>  
            </div>
        </div>
    </div>
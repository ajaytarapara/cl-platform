@model CIPlatform.Entities.ViewModels.Admin_loginModel
<div class="container">
    <div class="row">
        <form method="post" action="Admin_login">
            <div class="col-md-8 card mx-auto mt-5 pb-5">
                <h1 class="mx-auto mt-3">
                    Admin Login
                </h1>
                <label class="mt-2 mx-5" asp-for="Email">Admin Email</label><br>
                <input type="email" class="mx-5" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
                <label class="mt-3 mx-5" asp-for="Password">Password</label><br>
                <input type="password" class="mx-5" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
                <div style="display: flex;justify-content: flex-end;">
                    <button type="submit" style="width: 30%;background: none;border: 3px solid orange;color: orange;border-radius: 30px;font-weight: bold;"
                            class="mt-4 p-1 mx-5">
                        Login
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

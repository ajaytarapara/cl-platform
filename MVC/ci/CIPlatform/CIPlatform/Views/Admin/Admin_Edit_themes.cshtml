            <form method="post" action="Admin_Edit_themes">
            <div class="row card mt-4 mx-3">
                <div class="container">
                    <div class="row admin-add-cms-heading p-1">
                        <h1>
                            Edit Theme
                        </h1>
                    </div>
                    <input type="hidden" asp-for="themeId" value="@Model.themeId">
                    <label class="mt-2" asp-for="themeTitle">Title</label><br>
                    <input class="mt-2 p-1 mb-3" asp-for="themeTitle" autocomplete="on" type="text" style="width:100%;">
                    <span class="text-danger" asp-validation-for="themeTitle"></span>
                </div>
            </div>
            <div style="display:flex;justify-content:flex-end" class="container-fluid pb-3 mt-3">

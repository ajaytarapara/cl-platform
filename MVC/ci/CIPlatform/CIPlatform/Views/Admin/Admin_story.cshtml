<link rel="stylesheet" href="~/Admin/css/admin.css" asp-append-version="true" />
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-12 d-lg-flex flex-column" id="admin-page-navigation">
            @Html.Partial("_Admin_dashboard")
        </div>
        <div class="col-lg-9 col-md-12">
            <div class="card row d-flex p-3" style="flex-direction: row;">
                @Html.Partial("_Admin_Header")
            </div>
            <div class="container mt-3">
                <h1>
                    Story
                </h1>
                <hr>
                <div class="row mt-4" style="justify-content: space-between;">
                    <div class="col-3 px-1"
                         style="align-items: center;display: flex;justify-content:space-between;flex-direction: row;
                         border:1px solid gray;height:50px;border-radius: 10px;margin-left:10px;">
                        <img src="./images/search.png" style="height:20px;">
                        <input type="text" name="" id="" placeholder="Search" style="width:90%;border: none;">
                    </div>
                    <div class="col-5">
                    </div>
                    <div class="col-3 d-flex" style="justify-content: flex-end;">
                        <button class="p-2"
                                style="background: none;border: 2px solid orange;border-radius: 15px;
                               color: orange;font-weight: bolder;width: 150px;margin-right: 0px;">
                            + Add
                        </button>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="table-responsive">
                        <table class="table" style="border:1px solid rgb(197, 195, 195);">
                            <thead style="background: #F8F9FC 0% 0% no-repeat padding-box;
                                box-shadow: 0px 2px 3px #0000000F;">
                                <tr>
                                    <th>Story Title</th>
                                    <th>Full Name</th>
                                    <th>Mission Title</th>
                                    <th>Action</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quae, ad.</td>
                                    <td>ajay Tarpara</td>
                                    <td>Animal welfare is best for environment</td>
                                    <td>
                                        <a class="admin-story-view-btn" href="">view</a>
                                    </td>
                                    <td>
                                        <button class="admin-story-approve-btn">
                                            <span class="close">&#10003;</span>
                                        </button>
                                    </td>
                                    <td>
                                        <button class="admin-story-cancel-btn">
                                            <span class="close">&times;</span>
                                        </button>
                                    </td>
                                    <td>
                                        <button class="admin-story-delete-btn">
                                            <img style="width:20px;height: 20px;" class="img-fluid"
                                                 src="./images/bin.png">
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/bootstrap.bundle.js"></script>
<script>
    function adminpage_openNav() {
        document.getElementById("admin-page-navigation").style.display = "flex";
        document.getElementById("admin-page-navigation").style.width = "65%";
        document.getElementById("admin-page-navigation").style.opacity = "1";
        document.getElementById("admin-page-navigation").style.height = "100vh";

    }
    function closeNav() {
        document.getElementById("admin-page-navigation").style.width = "0%";
        document.getElementById("admin-page-navigation").style.opacity = "0";
    }
</script>

<link rel="stylesheet" href="~/Admin/css/admin.css" asp-append-version="true" />
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-2 col-lg-3  d-lg-flex flex-column" id="admin-page-navigation">
            @Html.Partial("_Admin_dashboard")
        </div>
        <div class="col-xl-10 col-lg-9">
            <div class="card row d-flex p-3" style="flex-direction: row;">
                @Html.Partial("_Admin_Header")

            </div>
            <div class="container mt-3">
                <!-- delete --Modal -->
                <div class="modal fade" id="admin-cms-delete" tabindex="-1" aria-labelledby="exampleModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog" style="margin: 33vh auto;">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this item?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal" style="background:transparent;color:black">
                                    Cancel
                                </button>
                                <button type="button" class="btn btn-secondary"
                                        style="background:transparent;color:orange;border: 1px solid orange;">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ================================== -->
                <h1>
                    CMS Page
                </h1>
                <hr>
                <div class="row mt-4" style="justify-content: space-between;">
                    <div class="col-3 px-1"
                         style="align-items:
                         center;display: flex;justify-content:space-between;flex-direction: row;border:1px solid gray;
                         height:50px;border-radius: 10px;margin-left:10px;">
                        <img src="./images/search.png" style="height:20px;">
                        <input type="text" name="" id="" placeholder="Search" style="width:90%;border: none;">
                    </div>
                    <div class="col-5">
                    </div>
                    <div class="col-3 d-flex" style="justify-content: flex-end;">
                        <button class="p-2"
                                style="background: none;border: 2px solid orange;border-radius: 15px;
                               color: orange;font-weight: bolder;width: 150px;margin-right: 0px;">
                            <a href="@Url.Action("Admin_add_cms","Admin")" style="text-decoration: none;color: orange;">+ Add</a>
                        </button>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="table-responsive">
                        <table class="table" style="border:1px solid rgb(197, 195, 195);">
                            <thead style="background: #F8F9FC 0% 0% no-repeat padding-box;
                                box-shadow: 0px 2px 3px #0000000F;">
                                <tr>
                                    <th>Title</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Animi, consectetur?
                                    </td>
                                    <td style="color: green;">Active</td>
                                    <td>
                                        <a href="@Url.Action("Admin_edit_cms","Admin")">
                                            <svg style="color:orange;width: 20px;height: 20px;"
                                                 xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                 fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                      d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                        </a>
                                    </td>
                                    <td>
                                        <button style="background: none;padding: 0px;border:none;margin-left:4px;width:20px;height: 20px;"
                                                data-bs-toggle="modal" data-bs-target="#admin-cms-delete">
                                            <img style="width:20px;height: 20px;" class="img-fluid"
                                                 src="./images/bin.png">
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

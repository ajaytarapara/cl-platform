<link rel="stylesheet" href="~/Admin/css/admin.css" asp-append-version="true" />
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-12 d-lg-flex flex-column" id="admin-page-navigation">
            @Html.Partial("_Admin_dashboard")
        </div>
        <div class="col-lg-9 col-md-12">
            <div class="card row d-flex p-3" style="flex-direction: row;">
                @Html.Partial("_Admin_Header")
            </div>
            <div class="row card mt-4 mx-3">
                <div class="container">
                    <div class="row admin-add-cms-heading p-1">
                        <h1>
                            Add
                        </h1>
                    </div>
                    <label class="mt-2" for="">Title</label><br>
                    <input class="mt-2 p-1 " type="text" style="width:100%;">
                    <label class="mt-2" for="">Description</label>
                    <div class="mt-3">
                        <textarea class="mt-2">
                                ADD Description
                            </textarea>
                    </div>
                    <label for="" class="mt-2">Slug</label><br>
                    <input class="mt-2 p-1 " type="text" style="width:100%;">
                    <label for="" class="mt-2">Status</label>
                    <div class="dropdown mt-2 d-flex mb-5">
                        <select style="width:100%;background-color: transparent;color: black;padding: 5px;">
                            class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <option>Action</option>
                            <option>Another action</option>
                            <option>Something else here</option>
                        </select>
                    </div>
                </div>
            </div>
            <div style="display:flex;justify-content:flex-end" class="container-fluid pb-3 mt-3">
                <button style="background-color: transparent;color: black;padding: 10px;border:2px solid black;border-radius: 10px;margin-right: 10px;width: 100px;">cancel</button>
                <button style="background-color: transparent;color: orange;border:2px solid orange;color:orange;border-radius: 10px;padding: 10px;width: 100px;">Save</button>
            </div>
        </div>
    </div>
</div>
<script>
    function adminpage_openNav() {
        document.getElementById("admin-page-navigation").style.display = "flex";
        document.getElementById("admin-page-navigation").style.width = "65%";
        document.getElementById("admin-page-navigation").style.opacity = "1";
        document.getElementById("admin-page-navigation").style.height = "100vh";

    }
    function closeNav() {
        document.getElementById("admin-page-navigation").style.width = "0%";
        document.getElementById("admin-page-navigation").style.opacity = "0";
    }
</script>
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
    });
</script>
<script src="./js/bootstrap.bundle.js"></script>

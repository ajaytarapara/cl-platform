@model CIPlatform.Entities.ViewModels.PaginationMission
@*<h1>@Model.missions.Count()</h1>*@


<div class="container mt-3">
    <div class="row d-flex">
        <div class="col-6 d-flex">
            <h1 id="missioncount" style="font-weight:500">Explore @Model.missionCount Mission</h1>
        </div>
        <div style="justify-content:flex-end;" class="col-6 d-flex">
            <button class="dropdown-toggle p-1" type="button" id="dropdownMenu2" data-bs-toggle="dropdown"
                    aria-expanded="false" style="margin: 10px;border:1px solid gray;background:none;width:100px">
                Sort by
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2" id="sort">

                <li class="p-1">
                    <a class="dropdown-item" name="highestseats" id="" />highestseats</a>
                </li>
                <li class="p-1">
                    <a class="dropdown-item" name="lowestseats" id="" />lowestseats</a>
                </li>
                <li class="p-1">
                    <a class="dropdown-item" name="sortbydate" id="" />Newest</a>
                </li>
                </li>
                <li class="p-1">
                    <a class="dropdown-item" name="lowestseats" id="" />Oldest</a>
                </li>
                <li class="p-1">
                    <a class="dropdown-item" name="lowestseats" id="" />My favorites</a>
                </li>
            </ul>
            <button id="grid-view-btn" style="margin: 10px;background:none;width:45px;border:none">
                <img src="~/images/grid.png" alt="">

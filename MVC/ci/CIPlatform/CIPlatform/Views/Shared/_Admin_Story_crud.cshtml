@using CIPlatform.Entities.DataModels
@model CIPlatform.Entities.ViewModels.AdminPageList<Story>
<div class="table-responsive">
    <table class="table" style="border:1px solid rgb(197, 195, 195);">
        <thead style="background: #F8F9FC 0% 0% no-repeat padding-box;
                                box-shadow: 0px 2px 3px #0000000F;">
            <tr>
                <th>Story Title</th>
                <th>Full Name</th>
                <th>Mission Title</th>
                <th>Action</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Records != null)
            {

                @foreach (var item in Model.Records)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.User.FirstName @item.User.LastName</td>
                        <td>@item.Mission.Title</td>
                        <td>
                            <a class="admin-story-view-btn" href="@Url.Action("View_Story","Story",new{ storyid=@item.StoryId})">
                                view</a>
                        </td>
                        <td>
                            <button id="@item.StoryId" class="adminstoryapprovebtn">
                                <span class="close">&#10003;</span>
                            </button>
                        </td>
                        <td>
                            <button id="@item.StoryId" class="admin-story-cancel-btn">
                                <span class="close">&times;</span>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
@{
    int pageSize = 2;
    double pageCount = Math.Ceiling((Model.TotalCount * 1.0) / (pageSize*1.0));
}
<div class="pe-0 pe-sm-5 d-flex justify-content-end align-items-center mt-4">
    <div id="pages-@pageCount" class="Pagination Pagination-total" style="display:flex">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center" id="pagination">
                <li style="cursor:pointer;" class="page-item"><a class="page-link">&lt;&lt;</a></li>
                <li style="cursor:pointer;" class="page-item"><a class="page-link">&lt;</a></li>

                @for (int i = 1; i <= pageCount; i++)
                {
                    <li class="page-item ">
                        <a class="page-link" href="">@i</a>
                    </li>
                }
                <li style="cursor:pointer;" class="page-item"><a class="page-link">&gt;</a></li>
                <li style="cursor:pointer;" class="page-item"><a class="page-link">&gt;&gt;</a></li>
            </ul>
        </nav>
    </div>
</div>
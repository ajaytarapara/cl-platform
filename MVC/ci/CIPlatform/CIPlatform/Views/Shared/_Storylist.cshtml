@model CIPlatform.Entities.ViewModels.PaginationMission
    @foreach (var Item in Model.Stories)
{

    <div class="card mb-5" style="width: 25rem;">

        <div class="howerimg">
            <img src="@Item.storymediapath.@Item.storymediatype" alt="Avatar"
             class="howermainimage" style="width: 106%; margin-left: -11px;">
            <div class="overlay overlayforhower">
                <div class="howertext">
                    <button id="btnhower">
                        <span style="color: white;">View Details</span>&nbsp;<span>
                            <i class="bi bi-arrow-right" style="color:white"></i>
                        </span>
                    </button>
                </div>
            </div>
            <div class="storytheme">
                <spam class="storyth">@Item.themetitle</spam>
            </div>
        </div>

        <div class="card-body">
            <h5 class="card-title" style="margin-top: 5%;">
                @Item.storytitle
            </h5>
            <p style="color:#6c757d">
                @Item.storydescription
            </p>
        </div>
        <div class="card-body">
            <img src="@Item.useravtar" class="storycardimg" />&nbsp;<span id="storycardimgtext">
                @Item.userfirstname @Item.userlastname
            </span>
        </div>

    </div>

}

<div class="Pagination d-flex mt-5" style="justify-content:center;">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center" id="pagination" style="display:flex;">
            @*<li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <!-- <span class="sr-only">Previous</span> -->
                </a>
                </li>*@


            @for (int i = 1; i <= Model.pageCount; i++)
            {
                <li class="page-item d-flex">
                    <a class="page-link" style="background-color:orange;opacity:0.7;margin-right:10px;" href="">@i</a>
                </li>
            }
            @*<li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <!-- <span class="sr-only">Next</span> -->
                </a>
                </li>*@
        </ul>
    </nav>
</div>
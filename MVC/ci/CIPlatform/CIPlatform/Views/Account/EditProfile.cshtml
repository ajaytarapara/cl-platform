@model CIPlatform.Entities.ViewModels.EditProfileModel
<form method="post" asp-action="EditProfile">
    <div class="container">
        <div class="row">
            <div id="menubarimg"class="d-md-none">
                <button  onclick="menubartoggle()"><img src="images/list.png"
                        alt=""></button>
            </div>
            <div class="col-6  leftnav">

                <button style="border: none; background: white;">Stories</button>
                <button style="border: none; background: white;" class="dropdown-toggle bg-light" type="button"
                    id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                    Policy
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                    <li><button class="dropdown-item" type="button">Action</button></li>
                    <li><button class="dropdown-item" type="button">Another action</button></li>
                    <li><button class="dropdown-item" type="button">Something else here</button></li>
                </ul>
            </div>
            <div class="col-6 d-flex px-5 rightnav">
                <img src="@Model.avatar" alt=""
                    style="border-radius: 50%;height: 100%; padding: 4px;">
                    <button style="border: none; background: white;" class="dropdown-toggle bg-light" type="button"
                    id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                    @Model.firstname @Model.lastname
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                    <li><button class="dropdown-item" type="button">Action</button></li>
                    <li><button class="dropdown-item" type="button">Another action</button></li>
                    <li><button class="dropdown-item" type="button">Something else here</button></li>
                </ul>



            </div>
        </div>

    </div>


<hr />


<div class="container mt-2">
    <div class="row">
        <div class="col-md-3 userimgdiv">
            <img id="uimg" src="@Model.avatar" alt="">
            <p style="text-align: center;">@Model.firstname @Model.lastname</p>
            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal" style="margin-left: 19%; font-size: 12px;">Change Password</button>



        </div>

        <div class="col-md-9 colclass card mx-2">
            <div class="row">
                <h5>
                    <strong>Basic Information</strong>
                </h5>
                <hr>
            </div>
            <div class="row formargin">
                <div class="col-md-6">
                    <label for="">Name*</label>
                    <input asp-for="firstname"class="form-control " placeholder="Enter your name" type="text">
                </div>
                <div class="col-md-6">
                    <label for="">Surname*</label>
                    <input asp-for="lastname"class="form-control " placeholder="Enter your surname" type="text">
                </div>
            </div>
            <div class="row formargin">
                <div class="col-md-6">
                    <label for="">Employee ID</label>
                    <input class="form-control " placeholder="Enter your employee id" type="text">
                </div>
                <div class="col-md-6">
                    <label for="">Manager</label>
                    <input class="form-control " placeholder="Enter your manager details" type="text">
                </div>
            </div>
            <div class="row formargin">
                <div class="col-md-6">
                    <label for="">Title</label>
                    <input class="form-control" placeholder="Enter your employee id" type="text">
                </div>
                <div class="col-md-6">
                    <label for="">Department</label>
                    <input asp-for="department"class="form-control" placeholder="Enter your manager details" type="text">
                </div>
            </div>
            <div class="row formargin">
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">My Profile*</label>
<textarea asp-for="profiletext" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
            </div>
            <div class="row formargin">
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Why I Volunteer?</label>
<textarea asp-for="whyivol" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
            </div>
            <div class="row" style="margin-top: 50px;">
                <h5>
                    Address Information
                </h5>
                <hr>
            </div>
            <div class="row formargin">
                <div class="col-md-6">
                    <label for="">City</label>
                    <select class="form-select dropcity" aria-label="Default select example">
                        <option selected>Select your City</option>

                    </select>
                </div>
                <div class="col-md-6">
                    <label for="">Country*</label>
                    <select class="form-select dropcountry" aria-label="Default select example">
                        <option selected>Select your country</option>

                    </select>
                </div>

            </div>
            <div class="row" style="margin-top: 50px;">
                <h5>
                    Professional Information
                </h5>
                <hr>
            </div>
            <div class="row formargin">
                <div class="col-md-6">
                    <label for="">Availablity</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Select your availablity</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="">LinkedIn</label>
                    <input class="form-control" placeholder="Enter linkedIn URL" type="text">
                </div>


            </div>
            <div class="row" style="margin-top: 50px;">
                <h5>
                    My Skills
                </h5>
                <hr>
            </div>
            <div class="row formargin">
                <div class="mb-3">

<textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>

            </div>
            <div class="row">
                <div>
                    <button id="skillbutton">Add Skills</button>
                </div>
                <div>
                    <button class="right-button" style="margin-bottom: 50px;">Save</button>
                </div>


            </div>


        </div>
    </div>

</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Enter Old Password">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Enter New Password">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Enter confirm Password">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ContactusModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Contact Us</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="">Name*</label>
                        <input class="form-control " disabled placeholder="Smith Doh" type="text">
                    </div>
                    <div class="mb-3">
                        <label for="">Email Address*</label>
                        <input class="form-control " disabled placeholder="Smith doh1234@gmail.com" type="text">
                    </div>
                    <div class="mb-3">
                        <label for="">Subject*</label>
                        <input class="form-control " placeholder="Enter your Subject" type="text">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Message*</label>
<textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Enter your Message" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" >Save</button>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container footerforgrid">
    <button type="button" class="btn" id="footertextforuser">Privacy Policy</button>
    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#ContactusModel">Contact Us</button>
</div>
<hr />
</form>
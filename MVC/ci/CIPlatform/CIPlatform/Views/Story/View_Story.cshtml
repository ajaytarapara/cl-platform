@model CIPlatform.Entities.ViewModels.StoryDetailModel

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Recommanded to your Co-worker</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
            
              <div class="mb-3">
                  <form action="recommendedtocoworker" method="Post">
                  <input name="Missionid" type="hidden" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                 <select class="form-select" aria-label="Default select example" id="receipient-email">
                     @foreach (var item in Model.usersemails)
                     {                     
                        <option value="@item.Email">@item.Email</option>
                     }
                </select>
                <button type="submit" class="btn btn-primary mt-2" id="btn-recommend" value="@Model.story.MissionId">Send Email</button>
                <div style="width:100%;margin-top:10px;">
                     </form>                     
                     <label>Search Email address</label>
                     <form action="recommendedtocoworker" method="Post">
                        <input list="cars" style="width: 100%;border: 1px solid gray;height: 35px;" id="searchemail">
                        <datalist id="cars">
                            @foreach (var item in Model.usersemails)
                            {
                            <option value="@item.Email" />
                            <span>@item.FirstName @item.LastName</span>
                            }
                        </datalist>
                         <button type="submit" class="btn btn-primary mt-2" id="btn-recommend-search"                value="@Model.story.MissionId">Send Email</button>
                     </form>
                </div>
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
              </div>
              
                  
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
      </div>

    </div>
  </div>

</div>




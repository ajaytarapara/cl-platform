  // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
  var modal = $(this)
  modal.find('.modal-title').text('New message to ' + recipient)
  modal.find('.modal-body input').val(recipient)
})


//================================================================================================
//RECOMMANDED TO CO WORKER
//=================================================================================================
$("#btn-recommend").on("click", function (e) {
    e.preventDefault();

    var missionid = $(this).val();
    var co_email = $("#receipient-email").val();
    var val = missionid;
    $.ajax({
        type: "POST",
        url: '/Story/recommendedtocoworker',
        dataType: "html",
        data: { Missionid: val, cow_email: co_email.toString() },
        success: function (data) {
            alert("email send successfully");
          $("#receipient-email").val();
        },
        error: function (xhr, status, error) {
            // Handle error
            console.log(error);
        }
    })

});


$("#btn-recommend-search").on("click", function (e) {
    e.preventDefault();
    var missionid = $(this).val();
    var co_email = $("#searchemail").val();
    var val = missionid;
    $.ajax({
        type: "POST",
        url: '/Story/recommendedtocoworker',
        dataType: "html",
        data: { Missionid: val, cow_email: co_email.toString() },
        success: function (data) {
            alert("email send successfully");
          $("#cars").val();
        },
        error: function (xhr, status, error) {
            // Handle error
            console.log(error);
        }
    })

});

</script>
